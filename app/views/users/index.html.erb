<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>user_index</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <div class="profile">
                    <h1>User info</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th><%= attachment_image_tag @user,:profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>name</td>
                                <td><%= @user.name %></td>
                            </tr>
                            <tr>
                                <td>introduction</td>
                                <td><%= @user.introduction %></td>
                            </tr>
                        </tbody>
                        </table>

                        <div>
                            <% if @user.id == current_user.id %>
                            <%= link_to edit_user_path(@user) do %>
                            <button class="btn btn-default btn-block"><i class="glyphicon glyphicon-wrench" aria-hidden="true"></i></button>
                            <% end %>
                            <% end %>
                        </div>
                </div>

                <div class="create">
                    <h2>New book</h2>
                    <%= form_for(@book) do |f| %>

                    <h4>Title</h4>
                    <%= f.text_field :title %>

                    <h4>Opinion</h4>
                    <%= f.text_area :body %>

                    <p><%= f.submit "Create Book", class: "btn btn-default btn-block" %></p>


                    <% end %>
                </div>
            </div>

            <div class="col-xs-9">

                <div class="users">
                    <h1>Users</h1>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>image</<th>
                            <th>name</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td><%= attachment_image_tag user, :profile_image , format: 'jpeg', size: "40x40" , fallback: "no_image.jpg" %></td>
                            <td><%= user.name %></td>
                            <td><%= link_to "Show" , user_path(user) %></td>
                        </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>